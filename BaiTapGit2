void phepToanCoBan(int a, int b){
	cout<<"a+b= "<<a+b<<endl;
	cout<<"a-b= "<<a-b<<endl;
	cout<<"a*b= "<<a*b<<endl;
	if(b==0) cout<<"Khong the chia cho 0"<<endl;
	else 	cout<<"a/b= "<<a/b<<endl;

void tinhchuvidientich()
{
	int a, b;
	//chu vi hình chữ nhật
	cout << "Chu vi hinh chu nhat"<<endl;

	cout << "Nhap a:"<<endl;
	cin >> a;

	cout << "Nhap b:"<<endl;
	cin >> b;
	cout << "Chu vi hinh chu nhat:" << (a + b) * 2 << endl;
	//chu vi hình vuông
	cout << "Chu vi hinh vuong" << endl;
	cout << "Nhap so a :" << endl;
	cin >> a;
	cout << "\n Chu vi hinh vuong:" << a * 4 << endl;
	//chu vi hình tròn
	cout << "Chu vi hinh tron" << endl;
	cout << "Nhap so r:" << endl;
	cin >> a;
	cout << "Chu vi hinh tron:" << a * 2 * 3.14 << endl;

	//diện tích hình chữ nhật
	cout << "Dien tich hinh chu nhat" << endl;
	cout << "Nhap a :" << endl;
	cin >> a;
	cout << "Nhap b :" << endl;
	cin >> b;

	cout << "Dien tich hinh chu nhat:" << a * b << endl;
	//diện tích hình vuông
	cout << "Dien tich hinh vuong" << endl;
	cout << "Nhap so a:" << endl;
	cin >> a;
	cout << "Dien tich hinh vuong:" << a * a << endl;
	//diện tích hình tròn
	cout << "Dien tich hinh tron" << endl;
	cout << "Nhap so r:" << endl;
	cin >> a;
	cout << "Dien tich hinh tron:" << 3.14 *(a*a) << endl;

}

int main() {
	int a, b;
	
	
	return 0;
}